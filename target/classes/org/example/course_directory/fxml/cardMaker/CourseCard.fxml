<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.course_directory.cardMaker.CourseCardController">
    <VBox fx:id="courseCard" alignment="BOTTOM_CENTER" layoutX="20.0" layoutY="20.0" minWidth="-Infinity" prefHeight="231.0" prefWidth="200.0" style="-fx-border-color: white;" styleClass="card">
        <children>
            <ImageView fx:id="courseImageView" fitHeight="124.0" fitWidth="166.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="courseTitle" alignment="CENTER" prefHeight="41.0" prefWidth="186.0" text="Название">
                <font>
                    <Font name="Comic Sans MS" size="17.0" />
                </font>
            <VBox.margin>
               <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
            </Label>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                    <Label fx:id="progLang" alignment="CENTER" prefHeight="40.0" prefWidth="160.0" text="Python" textAlignment="CENTER">
                        <font>
                            <Font name="Comic Sans MS" size="17.0" />
                        </font>
                    </Label>
                    <Label fx:id="courseAccess" alignment="CENTER" prefHeight="30.0" prefWidth="178.0" text="Бесплатный">
                        <font>
                            <Font name="Comic Sans MS" size="17.0" />
                        </font>
                    </Label>
            </children>
         </HBox>
            <Button onAction="#openAboutCoursePage" mnemonicParsing="false" prefHeight="35.0" prefWidth="206.0" styleClass="cardButtons" text="Посмотреть">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Button>
        </children>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </VBox>

</AnchorPane>
